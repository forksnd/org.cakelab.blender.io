<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="package.all" name="Generate and Package a Java .Blend Data Model">
	
	<target name="init">
		<property name="version" value="1.3.4"/>
		
		<property name="ant.build.javac.target" value="1.8"/>
		
		<property name="blender.cfgdir" value="${user.home}/.config/blender"/>
		<property name="blender.java.package" value="org.blender"/>
		<property name="blender.java.package.dir" value="org.blender"/>
		<property name="java.blend.docs" value="/home/homac/repos/git/cakelab.org/playground/org.cakelab.blender.dnadoc/resources/dnadoc"/>
		<property name="web.downloads" value="${user.home}/tmp/public_html/projects/JavaBlend/downloads"/>
		<property name="project.name" value="JavaBlend"/>
		<property name="package.name" value="${project.name}-${version}-DNA-${blender.file.version}"/>
        <property name="workdir" value="${java.io.tmpdir}/${package.name}"/>
        <property name="srcdir" value="${workdir}/src"/>
		<property name="bindir" value="${workdir}/bin"/>
		<property name="jarfile" value="${web.downloads}/${package.name}.jar"/>
		<property name="zipfile" value="${web.downloads}/${project.name}-src-${version}-DNA-${blender.file.version}.zip"/>
		<property name="javadoczip" value="${web.downloads}/${project.name}-javadoc-${version}-DNA-${blender.file.version}.zip"/>

		<delete failonerror="false" includeEmptyDirs="true">
			<fileset dir="${workdir}"/>
			<fileset file="${zipfile}"/>
			<fileset file="${javadoczip}"/>
		</delete>
        <mkdir dir="${workdir}"/>
        <mkdir dir="${srcdir}"/>
        <mkdir dir="${bindir}"/>
	</target>
	
	<target name="generate" depends="init">
		<echo message="generating source code"/>
		<java classname="org.cakelab.blender.generator.ModelGenerator">
			<arg value="-in"/><arg file="${input}"/>
			<arg value="-out"/><arg file="${srcdir}"/>
			<arg value="-p"/><arg value="${blender.java.package}"/>
			<arg value="-c"/><arg file="${java.blend.docs}"/>
			<arg value="-u"/><arg value="true"/>
			<classpath>
	      		<pathelement location="bin"/>
	      		<pathelement location="../org.cakelab.json/bin"/>
	      		<pathelement location="../org.cakelab.jdoxml/bin"/>
				<fileset dir="lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</java>
		
		<copy todir="${srcdir}">
			<fileset dir="src" casesensitive="yes">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="${srcdir}">
			<fileset dir="../org.cakelab.json/src" casesensitive="yes">
				<include name="**/*"/>
			</fileset>
		</copy>
		<copy todir="${srcdir}">
			<fileset dir="../org.cakelab.jdoxml/src" casesensitive="yes">
				<include name="**/*"/>
			</fileset>
		</copy>
	</target>

	<target name="package.src" depends="generate">
		<echo message="creating source code package"/>
		<copy todir="${workdir}">
			<fileset dir="." casesensitive="yes">
				<include name="doc/**/*"/>
				<include name="licenses/**/*"/>
				<include name="export-DNA-lib.xml"/>
				<include name="generate.sh"/>
			</fileset>
		</copy>
		
		<zip destfile="${zipfile}" basedir="${java.io.tmpdir}">
			<include name="${package.name}/**/*"/>
			<exclude name="${package.name}/bin"/>
		</zip>
	</target>
	
	<target name="package.javadoc" depends="package.bin">
		<echo message="creating javadoc"/>
        <mkdir dir="${workdir}/javadoc"/>

        <javadoc 
        	access="protected" 
        	author="true" 
        	classpath="${bindir}" 
        	destdir="${workdir}/javadoc" 
        	doctitle="Java .Blend for Blender File Version ${blender.file.version}" 
        	nodeprecated="false" 
        	nodeprecatedlist="false" 
        	noindex="false" 
        	nonavbar="false" 
        	notree="false" 
        	overview="${workdir}/doc/spec.html" 
        	packagenames="org.*"
        	source="1.8" 
        	sourcepath="${srcdir}" 
        	splitindex="true" 
        	use="true" 
        	version="true"
        />
		<echo message="zip javadoc"/>
		<zip destfile="${javadoczip}" basedir="${workdir}/javadoc">
		</zip>
	</target>
	
	<target name="compile" depends="generate">
		<echo message="compiling"/>
		<javac srcdir="${srcdir}"
			destdir="${bindir}"
			classpath="${jarfile}"
			debug="off"
			includeAntRuntime="false"
			compiler="modern"
		/>
		<echo message="copying resources"/>
		<copy todir="${bindir}">
			<fileset dir="${srcdir}" casesensitive="yes">
				<include name="**/*"/>
				<exclude name="**/*.java"/>
			</fileset>
		</copy>
	</target>
	
	<target name="package.bin" depends="compile">
		<echo message="creating binary package"/>
		
		<jar destfile="${jarfile}" basedir="${bindir}">
			<include name="**/*"/>
		</jar>
	</target>
	<target name="package" depends="package.bin,package.src,package.javadoc">
		<echo message="done."/>
	</target>
	
	<target name="package.all">
		<antcall target="package">
			<param name="blender.file.version" value="2.91.10"/>
			<param name="input" value="versions/2.91.10-2.90.0.blend"/>
		</antcall>
		<antcall target="package">
			<param name="blender.file.version" value="2.90.8"/>
			<param name="input" value="versions/2.90.8-2.90.0.blend"/>
		</antcall>
		<antcall target="package">
			<param name="blender.file.version" value="2.83.2"/>
			<param name="input" value="versions/2.83.19-2.83.0.blend"/>
		</antcall>
		<antcall target="package">
			<param name="blender.file.version" value="2.82"/>
			<param name="input" value="versions/2.82.7-2.80.0.blend"/>
		</antcall>
		<antcall target="package">
			<param name="blender.file.version" value="2.81"/>
			<param name="input" value="versions/2.81.16-2.80.0.blend"/>
		</antcall>
		<antcall target="package">
			<param name="blender.file.version" value="2.80"/>
			<param name="input" value="versions/2.80.75-2.80.0.blend"/>
		</antcall>
		<antcall target="package">
			<param name="blender.file.version" value="2.79"/>
			<param name="input" value="versions/2.79.0-2.70.6.blend"/>
		</antcall>
		<antcall target="package">
			<param name="blender.file.version" value="2.78"/>
			<param name="input" value="versions/2.78.0-2.70.6.blend"/>
		</antcall>
		<antcall target="package">
			<param name="blender.file.version" value="2.76"/>
			<param name="input" value="versions/2.76.0-2.70.5.blend"/>
		</antcall>
		<antcall target="package">
			<param name="blender.file.version" value="2.72"/>
			<param name="input" value="versions/2.72.2-2.70.5.blend"/>
		</antcall>
		<antcall target="package">
			<param name="blender.file.version" value="2.69"/>
			<param name="input" value="versions/2.69.0-2.62.0.blend"/>
		</antcall>
	</target>
	
</project>